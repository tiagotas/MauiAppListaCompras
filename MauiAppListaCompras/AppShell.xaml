<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppListaCompras.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppListaCompras"
    xmlns:Views="clr-namespace:MauiAppListaCompras.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppListaCompras">

    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>

    <TabBar x:Name="TabsPaginas">
        <Tab Title="Minha Lista" Icon="pag2.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Novo Produto">
            <ShellContent Route="NovoProduto" ContentTemplate="{DataTemplate Views:NovoProduto}" />
        </Tab>
    </TabBar>


</Shell>
